<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= form_for(@answer, url: question_answer_path) do |f| %>
      <div class="form-group">
        <%= f.label '回答' %>
        <%= f.text_area :content, class: 'form-control', rows: 6 %>
      </div>
      <%= f.submit '回答を投稿', class: 'btn btn-primary btn-sm' %>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
