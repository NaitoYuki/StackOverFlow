<div class="container question-wrapper">
  <div class="row">
    <div class="col-md-8">
      <h4 class="contents-title">質問を見る</h4>
      <div class="qlist-wrapper">
        <div class="question-mini-list">
        <% @questions.each do |question| %>
          <div class="question-summary narrow">
            <div class="cp">
              <div class="votes">
                <div class="mini-counts"><span><%= question.vote_count %></span></div>
                <div>票</div>
              </div>
              <div class="status unanswered">
                <div class="mini-counts"><span><%= question.answers.count %></span></div>
                <div>回答</div>
              </div>
            </div>
            <div class="summary">
              <h3>
                <%= link_to "#{question.title}", question_path(question), class: 'question-hyperlink' %>
              </h3>
              <div class="tags">
                <%= render partial: 'tags', locals: { tags: question.tags } %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    </br>
    </br>
    <div class="col-md-3">
      <div class="question-sidebar">
        <div class="question-aside">
          <%= link_to "質問する", new_question_path, class: 'btn btn-primary btn-sm' %>
        </div>
        <div class="newuser">
          <h4>サイト統計情報</h4>
          <table>
            <tr>
              <td class="stats-value"><%= @answer_counts %></td>
              <td class="stats-label">回答</td>
            </tr>
            <tr>
              <td class="stats-value"><%= @question_counts %></td>
              <td class="stats-label">質問</td>
            </tr>
            <tr>
              <td class="stats-value"><%= @user_counts %></td>
              <td class="stats-label">ユーザー</td>
            </tr>
          </table>
        </div>
        </br>
        <div class="tags">
          <h4>最近のタグ</h4>
          <% @tags.each do |tag| %>
            <%= link_to "#{tag.name}", questions_path(tag: tag.name), class: 'post-tag' %>
          &nbsp;
            <span class="item-multiplier">
              <span class="item-multiplier-x">&times;</span>&nbsp;
              <span class="item-multiplier-count"><%= tag.taggings_count %></span>
            </span>
          </br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
