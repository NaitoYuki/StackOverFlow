<div class="container">
  <div class="row">
    <div class="wrapper col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
      <h2>パスワード変更</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "新しいパスワード" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワードの確認" %>
        </div>

        <div class="actions">
          <%= f.submit "パスワードの変更" %>
        </div>
      <% end %>

        <div class="login-links">
          <%= render "devise/shared/links" %>
        </div>
    </div><!-- wrapper -->
  </div><!-- row -->
</div><!-- container -->
